{
    "extends": "../../tsconfig.base.json",
    "include": ["src/**/*"],
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "jsx": "react-jsx",
        "outDir": "build",
        "baseUrl": ".",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "paths": {
            "@/*": ["src/*"]
        }
    }
}
